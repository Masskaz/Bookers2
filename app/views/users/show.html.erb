<!-- User詳細 -->
<div class= "body container">
	<div class= "row">
		<div class="col-lg-4">
			<%= render 'users/list',post: @post, user: @user %>
		</div>

		<div class="col-lg-8">
			<table class="table table-striped">
			<h1>Books</h1>
			<tr>
				<th></th>
				<th>Title</th>
				<th>Opinion</th>
			</tr>
			<% @posts.each do |post| %>
				<tr>
				 <td><%= attachment_image_tag post.user, :image ,:fill,50,50,format:'jpg',fallback: "noimage.jpg" %></td>

				 <td><%= link_to post.title, post_path(post.id),class: "book_#{post.id}" %></td>

				 <td><%= post.opinion %></td>
				</tr>

			<% end %>
			</table>
		</div>
	</div>
</div>


