		<div class="container">
			<div class="row">
				<div class="col-lg-4">

					<h1>User info</h1>
						<%= attachment_image_tag user, :image, :fill,100,100,format:'jpg',fallback: "noimage.jpg" %><br>
				<table class="table table-striped">
					<tr>
						<td>
							<h3>name</h3>
						</td>
						<td>
							<h3><%= user.name %></h3>
						</td>
					</tr>

					<tr>
						<td>
							<h3>introduction</h3>
						</td>
						<td>
							<%= @user.itroduction %>
						</td>
					</tr>
				</table>

				<% if current_user.id == @user.id %>
						<p><%= link_to "",edit_user_path(user),class: "edit_user_#{user.id} glyphicon glyphicon-wrench btn btn-default btn-block"%></p>
				<% end %>

					<h1>New book</h1>


					<%= form_for(post) do |f| %>

						<h4>Title</h4>
						<%= f.text_field :title, class: "book_title btn-block" %>

						<h4>Opinion</h4>
						<%= f.text_area :opinion, class: "book_body btn-block" %><br>

						<div>
						<%= f.submit'Create Book',class: "CreateBook label-primary btn-block" %>
						</div>
					<% end %>
				</div>
				<div class="col-lg-8"></div>
			</div>
		</div>
			
