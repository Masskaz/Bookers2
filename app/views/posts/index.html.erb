<!-- Post一覧 -->


<div class="body container">
	<div class="row">
		<div class="col-lg-4">
			<% if @post.errors.any? %>
			  <div id="error_explanation" class="alert alert-danger">
			    <ul>
			      <% @post.errors.full_messages.each do |message| %>
			        <li><%= message %></li>
			      <% end %>
			    </ul>
			  </div>
			<% end %>


		<%= render 'users/list',post: @post, user: @user %>
		</div>

		<div class="col-lg-8">
			<table class="table">
			<h1>Books</h1>
			  <tr>
			  	<th></th>
				<th>Title</th>
				<th>Opinion</th>
			  </tr>

				<% @posts.each do |post| %>
					<tr>
						<td>
							<%= link_to user_path(post.user.id),class: "user_#{post.user.id}" do%>
							<%= attachment_image_tag post.user, :image ,:fill,50,50,format:'jpg',fallback: "noimage.jpg" %>
							<% end %>
						</td>
						<td>
							<%= link_to post.title, post_path(post.id),class: "book_#{post.id}" %>
						</td>
						<td>
							<%= post.opinion %>
						</td>
					</tr>
			<% end %>
			</table>
		</div>
	</div>
</div>


